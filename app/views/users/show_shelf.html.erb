<div class="breadcrumb">
  <%= link_to "@#{@user.username}", @user %>
  /
  <%= @shelf.name %>
</div>
<div class="book-list">
  <% for posting in @postings %>
    <div class="book">
      <%= link_to posting.book.title, [@user, posting] %>
      <div class="author">
        <%= posting.book.author %>
      </div>
      <% if posting.quote %>
        <div class="quote"><%= posting.quote %></div>
      <% end %>
    </div>
  <% end %>
</div>