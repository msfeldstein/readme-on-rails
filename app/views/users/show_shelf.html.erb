<div class="breadcrumb">
  <%= link_to "@#{@user.username}", @user %>
  /
  <%= @shelf.name %>
</div>
<div class="book-list">
  <% for posting in @postings %>
    <div class="book">
      <%= link_to posting.book.title, posting.book %>
      <div class="author">
        <%= posting.book.author %>
      </div>
      <% if posting.quote %>
        <pre><%= posting.quote %></pre>
      <% end %>
    </div>
  <% end %>
</div>